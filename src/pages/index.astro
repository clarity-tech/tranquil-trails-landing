---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tranquil Trails - Experience North-East India">
  <main>
    <!-- Hero Section -->
    <section class="relative h-screen text-white">
      <img src="https://placehold.co/1920x1080/1c1917/FFFFFF?text=Lush+Hills+of+Northeast" alt="Lush green hills of Northeast India" class="absolute inset-0 object-cover w-full h-full">
      <div class="absolute inset-0 bg-gradient-to-b from-stone-900/85 via-stone-900/80 to-stone-900/90"></div>
      <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-4">
        <p class="text-sm uppercase tracking-[0.3em] text-amber-400 mb-6 animate-fade-in">Luxury Travel Experiences</p>
        <h1 class="font-playfair text-5xl md:text-7xl font-semibold tracking-tight max-w-4xl animate-fade-in-up">
          Experience the Soul of Northeast India
        </h1>
        <p class="mt-6 text-lg md:text-xl max-w-2xl text-stone-200 font-light animate-fade-in-up" style="animation-delay: 0.2s;">
          Luxury journeys through Assam, Arunachal, Meghalaya & Nagaland — crafted for the discerning traveler.
        </p>
        <a href="mailto:tranquiltrailtravels@gmail.com" class="mt-10 px-10 py-4 border-2 border-white text-white font-medium tracking-wide uppercase text-sm hover:bg-white hover:text-stone-900 transition-all duration-300 animate-fade-in-up" style="animation-delay: 0.4s;">
          Plan Your Journey
        </a>
      </div>
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
        <svg class="w-6 h-6 text-white opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="py-24 md:py-32 bg-white">
      <div class="container max-w-4xl px-4 mx-auto text-center">
        <div class="animate-on-scroll">
          <div class="w-16 h-px bg-amber-600 mx-auto mb-8"></div>
          <h2 class="font-playfair text-3xl md:text-4xl text-stone-900 font-medium">Welcome to Tranquil Trails</h2>
          <p class="mt-8 text-stone-600 text-lg leading-relaxed">
            We curate immersive luxury experiences across Northeast India's four most captivating states. From Kaziranga's majestic wildlife to Tawang's ancient monasteries, Meghalaya's living root bridges to Nagaland's vibrant tribal heritage — each journey is thoughtfully designed for travelers who seek authentic cultural connections without compromising on comfort.
          </p>
        </div>
      </div>
    </section>

    <!-- Destinations Showcase -->
    <section class="py-20 md:py-28 bg-stone-50">
      <div class="container max-w-6xl px-4 mx-auto">
        <div class="text-center mb-16 animate-on-scroll">
          <p class="text-sm uppercase tracking-[0.2em] text-amber-600 mb-4">Explore</p>
          <h2 class="font-playfair text-3xl md:text-4xl text-stone-900 font-medium">Featured Destinations</h2>
        </div>
        <div class="grid gap-8 md:gap-12 md:grid-cols-2">
          <!-- Assam Card -->
          <div class="group bg-white border border-stone-200 overflow-hidden card-hover animate-on-scroll">
            <div class="overflow-hidden">
              <img src="https://placehold.co/600x400/44403c/FFFFFF?text=Assam" alt="Kaziranga National Park, Assam" class="object-cover w-full h-64 image-zoom">
            </div>
            <div class="p-8">
              <p class="text-sm uppercase tracking-[0.2em] text-amber-600 mb-2">Assam</p>
              <h3 class="font-playfair text-xl md:text-2xl text-stone-900 font-medium">Wildlife & Tea Heritage</h3>
              <p class="mt-4 text-stone-600 leading-relaxed">Encounter the one-horned rhino at Kaziranga and discover Majuli, the world's largest river island.</p>
            </div>
          </div>
          <!-- Arunachal Card -->
          <div class="group bg-white border border-stone-200 overflow-hidden card-hover animate-on-scroll delay-100">
            <div class="overflow-hidden">
              <img src="https://placehold.co/600x400/57534e/FFFFFF?text=Arunachal" alt="Tawang Monastery, Arunachal Pradesh" class="object-cover w-full h-64 image-zoom">
            </div>
            <div class="p-8">
              <p class="text-sm uppercase tracking-[0.2em] text-amber-600 mb-2">Arunachal Pradesh</p>
              <h3 class="font-playfair text-xl md:text-2xl text-stone-900 font-medium">Monasteries & Hidden Valleys</h3>
              <p class="mt-4 text-stone-600 leading-relaxed">From Tawang's Buddhist monasteries to Mechuka's pristine valleys — explore India's frontier state.</p>
            </div>
          </div>
          <!-- Meghalaya Card -->
          <div class="group bg-white border border-stone-200 overflow-hidden card-hover animate-on-scroll delay-200">
            <div class="overflow-hidden">
              <img src="https://placehold.co/600x400/78716c/FFFFFF?text=Meghalaya" alt="Living Root Bridges, Meghalaya" class="object-cover w-full h-64 image-zoom">
            </div>
            <div class="p-8">
              <p class="text-sm uppercase tracking-[0.2em] text-amber-600 mb-2">Meghalaya</p>
              <h3 class="font-playfair text-xl md:text-2xl text-stone-900 font-medium">Living Bridges & Waterfalls</h3>
              <p class="mt-4 text-stone-600 leading-relaxed">Trek to ancient living root bridges and witness Asia's cleanest village and spectacular waterfalls.</p>
            </div>
          </div>
          <!-- Nagaland Card -->
          <div class="group bg-white border border-stone-200 overflow-hidden card-hover animate-on-scroll delay-300">
            <div class="overflow-hidden">
              <img src="https://placehold.co/600x400/a8a29e/FFFFFF?text=Nagaland" alt="Dzukou Valley, Nagaland" class="object-cover w-full h-64 image-zoom">
            </div>
            <div class="p-8">
              <p class="text-sm uppercase tracking-[0.2em] text-amber-600 mb-2">Nagaland</p>
              <h3 class="font-playfair text-xl md:text-2xl text-stone-900 font-medium">Tribal Heritage & Alpine Meadows</h3>
              <p class="mt-4 text-stone-600 leading-relaxed">Experience Konyak warrior culture in Mon and trek the legendary Dzukou Valley.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-20 md:py-28 bg-white">
      <div class="container max-w-6xl px-4 mx-auto">
        <div class="text-center mb-16 animate-on-scroll">
          <p class="text-sm uppercase tracking-[0.2em] text-amber-600 mb-4">Why Us</p>
          <h2 class="font-playfair text-3xl md:text-4xl text-stone-900 font-medium">The Tranquil Trails Difference</h2>
        </div>
        <div class="grid gap-12 md:gap-16 md:grid-cols-3">
          <!-- Feature 1 -->
          <div class="text-center animate-on-scroll">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-stone-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
              </svg>
            </div>
            <h3 class="font-playfair text-xl text-stone-900 font-medium">Curated Luxury Experiences</h3>
            <p class="mt-4 text-stone-600 leading-relaxed">Handpicked accommodations and seamless logistics, so you can focus on the experience.</p>
            <div class="w-12 h-px bg-stone-200 mx-auto mt-8 md:hidden"></div>
          </div>
          <!-- Feature 2 -->
          <div class="text-center animate-on-scroll delay-100">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-stone-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="font-playfair text-xl text-stone-900 font-medium">Cultural Immersion</h3>
            <p class="mt-4 text-stone-600 leading-relaxed">Meet local communities, share meals with families, and participate in authentic traditions.</p>
            <div class="w-12 h-px bg-stone-200 mx-auto mt-8 md:hidden"></div>
          </div>
          <!-- Feature 3 -->
          <div class="text-center animate-on-scroll delay-200">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-stone-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-playfair text-xl text-stone-900 font-medium">Expert Local Companions</h3>
            <p class="mt-4 text-stone-600 leading-relaxed">Travel with guides who call Northeast home — their stories bring each destination to life.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 md:py-28 bg-stone-100">
      <div class="container max-w-6xl px-4 mx-auto">
        <div class="text-center mb-16 animate-on-scroll">
          <p class="text-sm uppercase tracking-[0.2em] text-amber-600 mb-4">Testimonials</p>
          <h2 class="font-playfair text-3xl md:text-4xl text-stone-900 font-medium">What Our Travelers Say</h2>
        </div>
        <div class="grid gap-8 md:gap-12 md:grid-cols-3">
          <!-- Testimonial 1 -->
          <div class="bg-white p-8 md:p-10 animate-on-scroll">
            <div class="text-amber-600 text-5xl font-playfair leading-none mb-4">"</div>
            <p class="text-stone-600 leading-relaxed italic">An extraordinary journey through the heart of Northeast India. Every detail was perfectly curated.</p>
            <div class="mt-8 pt-6 border-t border-stone-200">
              <p class="font-playfair text-stone-900 font-medium">Priya Sharma</p>
              <p class="text-sm text-stone-500 mt-1">Bangalore</p>
            </div>
          </div>
          <!-- Testimonial 2 -->
          <div class="bg-white p-8 md:p-10 animate-on-scroll delay-100">
            <div class="text-amber-600 text-5xl font-playfair leading-none mb-4">"</div>
            <p class="text-stone-600 leading-relaxed italic">The cultural immersion was beyond our expectations. A truly transformative experience.</p>
            <div class="mt-8 pt-6 border-t border-stone-200">
              <p class="font-playfair text-stone-900 font-medium">Rajesh & Meena Iyer</p>
              <p class="text-sm text-stone-500 mt-1">Chennai</p>
            </div>
          </div>
          <!-- Testimonial 3 -->
          <div class="bg-white p-8 md:p-10 animate-on-scroll delay-200">
            <div class="text-amber-600 text-5xl font-playfair leading-none mb-4">"</div>
            <p class="text-stone-600 leading-relaxed italic">Luxury travel with soul. Tranquil Trails understands what discerning travelers seek.</p>
            <div class="mt-8 pt-6 border-t border-stone-200">
              <p class="font-playfair text-stone-900 font-medium">Anand Mehta</p>
              <p class="text-sm text-stone-500 mt-1">Mumbai</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="py-20 md:py-28 text-center text-white bg-gradient-to-br from-stone-800 via-stone-900 to-stone-800">
      <div class="container max-w-4xl px-4 mx-auto animate-on-scroll">
        <p class="text-sm uppercase tracking-[0.2em] text-amber-400 mb-6">Start Your Journey</p>
        <h2 class="font-playfair text-3xl md:text-5xl font-medium">Begin Your Northeast Adventure</h2>
        <p class="max-w-2xl mx-auto mt-6 text-stone-300 text-lg leading-relaxed">Share your travel dates and interests — we'll design a personalized itinerary that balances discovery with comfort.</p>
        <a href="mailto:tranquiltrailtravels@gmail.com" class="inline-block mt-10 px-12 py-4 bg-amber-600 text-white font-medium tracking-wide uppercase text-sm hover:bg-amber-700 transition-all duration-300 hover:shadow-lg">
          Contact Us
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 bg-stone-900 text-stone-400 border-t border-stone-800">
      <div class="container max-w-6xl mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
          <div class="text-center md:text-left">
            <p class="font-playfair text-white text-lg">Tranquil Trails</p>
            <p class="text-sm mt-1">Your premium guide to Northeast India</p>
          </div>
          <div class="flex items-center gap-6">
            <a href="https://www.instagram.com/tranquil_trail_travels" target="_blank" rel="noopener noreferrer" class="hover:text-amber-500 transition-colors duration-300">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-stone-800 text-center text-sm">
          <p>&copy; 2026 Tranquil Trails. All Rights Reserved.</p>
        </div>
      </div>
    </footer>
  </main>

  <!-- Scroll Animation Script -->
  <script>
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.animate-on-scroll').forEach(el => observer.observe(el));
  </script>
</Layout>
