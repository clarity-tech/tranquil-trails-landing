---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tranquil Trails - Premium customized itineraries for North-East India" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
		<link rel="icon" type="image/x-icon" href={`${base}/favicon.ico`} />
		<meta name="generator" content={Astro.generator} />
		<!-- Google Fonts: Playfair Display + Inter -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-stone-50 font-inter text-stone-800">
		<slot />
	</body>
</html>
